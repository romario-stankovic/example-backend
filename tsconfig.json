{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["src/controllers/*"],
            "@dtos/*": ["src/dtos/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
            "@src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
